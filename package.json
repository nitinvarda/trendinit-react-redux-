{
  "name": "trendinit-main",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "server": "nodemon ./bin/www",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "client": "cd client && npm run start",
    "dev": "concurrently \"npm run server \" \"npm run client\" ",
    "test": "env-cmd -f ./config/test.env jest --watchAll   --runInBand"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "concurrently": "^5.3.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.28",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "multer-gridfs-storage": "^4.2.0",
    "nodemon": "^2.0.4"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "jest": "^24.9.0",
    "supertest": "^6.0.0"
  }
}
